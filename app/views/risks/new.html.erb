<h1>Добавить риск</h1>

<%= form_for @risk do |f| %>
  <% if @risk.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@risk.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @risk.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"Тип риска"%><br />
    <%= f.text_field :rtype %>
  </div>
  <div class="field">
    <%= f.label :"Наименование риска" %><br />
    <%= f.text_field :risk %>
  </div>
  <div class="field">
    <%= f.label :"Последствия" %><br />
    <%= f.text_area :result %>
  </div>

  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>
<% end %>